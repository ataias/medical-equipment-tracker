{
  "name": "medical-equipment-tracker",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/catarizea/medical-equipment-tracker.git",
  "author": "Catalin Rizea <catalinrizea1@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "authentication",
    "hasura",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "build": "set NODE_ENV=production && yarn --cwd frontend build",
    "clear": "rm -rf node_modules */node_modules packages/*/node_modules",
    "containers-stop": "docker stop medical-equipment-tracker_postgres_1 medical-equipment-tracker_graphql-engine_1",
    "hasura-start:dev": "set NODE_ENV=development && dotenv -e .env.development.local -- docker-compose up -d",
    "hasura-start": "set NODE_ENV=production && dotenv -e .env.production.local -- docker-compose up -d",
    "start": "set NODE_ENV=production && yarn --cwd authentication start"
  }
}
